@model AdvancedRepository.Models.CustomerModel

@{
    ViewBag.Title = "Choose";
}
<div class="container">
    <div>
        <br />
        <form method="post" action="/Customer/Index" class="d-inline-flex">
            <input type="search" name="name" placeholder="Arama..." class="form-control" />
            <button class="btn btn-success" type="submit">Ara</button>
        </form>
        <br />
        <hr />
        <a href="/Customer/Ekle" class="btn btn-info float-right col-md-2 text-white">EKLE</a>
        <a href="/Customer/Choose" class="btn btn-primary float-right col-md-2 text-white">Müşteri Seç</a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(x => x.Customers.CustomerID)</th>
                <th>@Html.DisplayNameFor(x => x.Customers.CompanyName)</th>
                <th>@Html.DisplayNameFor(x => x.Customers.ContactName)</th>
                <th>@Html.DisplayNameFor(x => x.Customers.Phone)</th>
                <th>@Html.DisplayNameFor(x => x.Customers.City)</th>
                <th>@Html.DisplayNameFor(x => x.Customers.Address)</th>
                <th>@Html.DisplayNameFor(x => x.Customers.Country)</th>
                <th colspan="3">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model.cList)
            {
                <tr>
                    <td>@item.CustomerID</td>
                    <td>@item.CompanyName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Phone</td>
                    <td>@item.City</td>
                    <td>@item.Address</td>
                    <td>@item.Country</td>
                    <td class="text-center"><a class="btn btn-info text-white" href="/Customer/Detail/@item.CustomerID">Detail</a></td>
                    <td class="text-center"><a class="btn btn-warning" href="/Customer/Update/@item.CustomerID">Update</a></td>
                    <td class="text-center"><a class="btn btn-danger text-white" href="/Customer/Delete/@item.CustomerID">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>



